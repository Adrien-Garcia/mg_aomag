<?xml version="1.0"?>
<layout version="0.1.0">

    <default>
    	<reference name="head">
            <!-- //TODO : gérer le cas où jquery n'est pas chargé dans le thème -->
            <action method="addItem"><type>skin_js</type><name>js/jetpulp/responsiveslider/jquery.bxslider.min.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>js/jetpulp/responsiveslider/picturefill.min.js</name><params/></action>
            <action method="addItem"><type>skin_js</type><name>js/jetpulp/responsiveslider/responsiveslider.js</name><params/></action>
        </reference>
    </default>

