/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>

<p class="product-image product-image-zoom">
	<a href="<?php echo $this->helper('catalog/image')->init($_product, 'image')?>" id="zoom-1" class="cloud-zoom fancybox" rel="zoomWidth: 490, zoomHeight: 490, adjustX: 20, adjustY: 0, showTitle: false, minWidth: 470, minHeight: 470">
    <?php
        $_img = '<img itemprop="image" id="image" src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(470).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" width="470" height="470" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
    </a>
</p>

<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
    <ul class="bxslider">
    <?php foreach ($this->getGalleryImages() as $_image): ?>
       	<li>
            <a href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile()); ?>" title="<?php echo $this->htmlEscape($_image->getLabel()) ?>" class="cloud-zoom-gallery" rel="useZoom: 'zoom-1', smallImage: '<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->resize(470); ?>'">
            	<img width="68" height="68" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(68); ?>" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" />
            </a>
       </li>
    <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>
