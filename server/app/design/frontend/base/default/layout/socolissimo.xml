<layout version="0.1.0">
<checkout_onepage_index>
   <reference name="head">
   <action method="addCss"><stylesheet>css/socolissimo.css</stylesheet></action>

	<action method="addJs"><script>jquery/jquery-1.6.3.min.js</script></action>
	<action method="addJs"><script>jquery/jquery.noconflict.js</script></action>
	<action method="addJs"><script>jquery/jquery.tools.min.js</script></action>

    <block type="core/text" name="map.js"><action method="setText"><text><![CDATA[<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&region=FR"></script>]]></text></action></block>
   
    <!-- TODO : ajouter le layer d'une manière différente  
    <reference name="checkout.onepage.shipping_method.available">
		<action method="setTemplate"><template>socolissimo/checkout/onepage/shipping_method/available.phtml</template></action>
    </reference>
    -->
   </reference>
   
</checkout_onepage_index>

<onestepcheckout_index_index>
   <reference name="head">
   	<action method="addCss"><stylesheet>css/socolissimo.css</stylesheet></action>
   	
	<action method="addJs"><script>jquery/jquery-1.6.3.min.js</script></action>
	<action method="addJs"><script>jquery/jquery.noconflict.js</script></action>
	<action method="addJs"><script>jquery/jquery.tools.min.js</script></action>
	
    <action method="addItem"><type>skin_js</type><script>js/socolissimo.js</script></action>
    <block type="core/text" name="map.js"><action method="setText"><text><![CDATA[<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&region=FR"></script>]]></text></action></block>        
   </reference>  
         
    <!-- TODO : ajouter le layer d'une manière différente  
	<reference name="content">				
		<block type="socolissimo/selector" name="socolissimo" template="socolissimo/checkout/onestepcheckout/selector.phtml" >
		    <block type="socolissimo/listrelais" name="listrelais" template="socolissimo/listrelais.phtml"/>
   		</block>
   	</reference>   	   	
   	-->
   	
</onestepcheckout_index_index>

<socolissimo_ajax_selector>
    <remove name="right"/>
    <remove name="left"/>

    <block type="socolissimo/selector" name="root" output="toHtml" template="socolissimo/selector.phtml"/>
</socolissimo_ajax_selector>

<socolissimo_ajax_listrelais>
    <remove name="right"/>
    <remove name="left"/>

    <block type="socolissimo/listrelais" name="root" output="toHtml" template="socolissimo/listrelais.phtml"/>
</socolissimo_ajax_listrelais>

</layout>
