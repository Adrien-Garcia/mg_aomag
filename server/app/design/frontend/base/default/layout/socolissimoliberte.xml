<layout version="0.1.0">
<checkout_onepage_index>
   <reference name="head">
   <action method="addCss"><stylesheet>css/socolissimoliberte.css</stylesheet></action>
   <!-- Ces fichiers sont inclus par le module Addonline_JQuery 
	<action method="addJs"><script>jquery/jquery-1.6.3.min.js</script></action>
	<action method="addJs"><script>jquery/jquery.noconflict.js</script></action>
	<action method="addJs"><script>jquery/jquery.tools.min.js</script></action>
	-->
    <action method="addItem"><type>skin_js</type><script>js/socolissimoliberte.js</script></action>
    <block type="core/text" name="map.js"><action method="setText"><text><![CDATA[<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&region=FR"></script>]]></text></action></block>
    
    <reference name="checkout.onepage.shipping_method.available">
		<action method="setTemplate"><template>socolissimoliberte/checkout/onepage/shipping_method/available.phtml</template></action>
    </reference>
    
   </reference>
   
</checkout_onepage_index>

<checkout_onepage_shippingmethod>
	<reference name="root">
		<action method="setTemplate"><template>socolissimoliberte/checkout/onepage/shipping_method/available.phtml</template></action>
   		<block type="socolissimoliberte/selector" name="socolissimoliberte" template="socolissimoliberte/selector.phtml" />
	</reference>
</checkout_onepage_shippingmethod>

<socolissimoliberte_ajax_listrelais>
    <remove name="right"/>
    <remove name="left"/>

    <block type="socolissimoliberte/listrelais" name="root" output="toHtml" template="socolissimoliberte/listrelais.phtml"/>
</socolissimoliberte_ajax_listrelais>

</layout>