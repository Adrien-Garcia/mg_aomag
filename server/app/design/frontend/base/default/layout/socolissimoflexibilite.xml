<layout version="0.1.0">
<checkout_onepage_index>
   <reference name="head">
   <action method="addCss"><stylesheet>css/socolissimoflexibilite.css</stylesheet></action>

	<action method="addJs"><script>jquery/jquery-1.6.3.min.js</script></action>
	<action method="addJs"><script>jquery/jquery.noconflict.js</script></action>
	<action method="addJs"><script>jquery/jquery.tools.min.js</script></action>

    <action method="addItem"><type>skin_js</type><script>js/socolissimoflexibilite.js</script></action>
    <block type="core/text" name="map.js"><action method="setText"><text><![CDATA[<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&region=FR"></script>]]></text></action></block>
    
    <reference name="checkout.onepage.shipping_method.available">
		<action method="setTemplate"><template>socolissimoflexibilite/checkout/onepage/shipping_method/available.phtml</template></action>
    </reference>
    
   </reference>
   
</checkout_onepage_index>

<onestepcheckout_index_index>
   <reference name="head">
   	<action method="addCss"><stylesheet>css/socolissimoflexibilite.css</stylesheet></action>
    <action method="addItem"><type>skin_js</type><script>js/socolissimoflexibilite.js</script></action>
    <block type="core/text" name="map.js"><action method="setText"><text><![CDATA[<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&region=FR"></script>]]></text></action></block>        
   </reference>  
         
	<reference name="content">				
		<!-- <action method="setTemplate"><template>socolissimoflexibilite/checkout/onestepcheckout/available.phtml</template></action> -->	
		<block type="socolissimoflexibilite/selector" name="socolissimoflexibilite" template="socolissimoflexibilite/checkout/onestepcheckout/selector.phtml" >
		    <block type="socolissimoflexibilite/listrelais" name="listrelais" template="socolissimoflexibilite/listrelais.phtml"/>
   		</block>
   	</reference>   	   	
   	
</onestepcheckout_index_index>



<checkout_onepage_shippingmethod>
	<reference name="root">
		<action method="setTemplate"><template>socolissimoflexibilite/checkout/onepage/shipping_method/available.phtml</template></action>
   		<block type="socolissimoflexibilite/selector" name="socolissimoflexibilite" template="socolissimoflexibilite/selector.phtml" >
		    <block type="socolissimoflexibilite/listrelais" name="listrelais" template="socolissimoflexibilite/listrelais.phtml"/>
   		</block>
	</reference>
</checkout_onepage_shippingmethod>

<socolissimoflexibilite_ajax_listrelais>
    <remove name="right"/>
    <remove name="left"/>

    <block type="socolissimoflexibilite/listrelais" name="root" output="toHtml" template="socolissimoflexibilite/listrelais.phtml"/>
</socolissimoflexibilite_ajax_listrelais>

</layout>
