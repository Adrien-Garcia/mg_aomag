<layout version="0.1.0">

	 <default>
		<reference name="head">
			<action method="addCss"><stylesheet>css/giftproduct.css</stylesheet></action>
		</reference>
	</default>

    <checkout_cart_index>
 
        <reference name="checkout.cart">
			<action method="setCartTemplate"><value>giftproduct/checkout/cart.phtml</value></action>
            <action method="setEmptyTemplate"><value>checkout/cart/noItems.phtml</value></action>
            <action method="chooseTemplate"/><!-- Il faut rÃ©appeler l'action choose template -->
            <block type="checkout/cart_giftproduct" name="checkout.cart.giftproduct" as="giftproduct" template="giftproduct/checkout/cart/giftproduct.phtml"/>
        </reference>
        
    </checkout_cart_index>

</layout>