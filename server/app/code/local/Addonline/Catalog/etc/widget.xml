<?xml version="1.0"?>

<widgets>
    <promotion_products type="aocatalog/product_widget_promotion" translate="name description" module="aocatalog">
        <name>Catalog Promotion Products List</name>
        <description>List of Products that are in promotion</description>
        <is_email_compatible>1</is_email_compatible>
        <parameters>
            <products_count translate="label">
                <required>1</required>
                <visible>1</visible>
                <value>5</value>
                <label>Number of Products to Display</label>
                <type>text</type>
            </products_count>
            <template>
                <required>1</required>
                <visible>1</visible>
                <label>Template</label>
                <type>select</type>
                <value>catalog/product/widget/promotion/content/promotion_grid.phtml</value>
                <values>
                    <default translate="label">
                        <value>catalog/product/widget/promotion/content/promotion_grid.phtml</value>
                        <label>Promotion Products Grid Template</label>
                    </default>
                    <list translate="label">
                        <value>catalog/product/widget/promotion/content/promotion_list.phtml</value>
                        <label>Promotion Products List Template</label>
                    </list>
                </values>
            </template>
            <cache_lifetime translate="label description">
                <label>Cache Lifetime (Seconds)</label>
                <description>86400 by default, if not set. To refresh instantly, Clear the Blocks HTML Output Cache.</description>
                <visible>1</visible>
                <type>text</type>
            </cache_lifetime>
        </parameters>
    </promotion_products>
    <bestseller_products type="aocatalog/product_widget_bestseller" translate="name description" module="aocatalog">
        <name>Catalog Bestseller Products List</name>
        <description>List of Products that are bestsellers</description>
        <is_email_compatible>1</is_email_compatible>
        <parameters>
            <products_count translate="label">
                <required>1</required>
                <visible>1</visible>
                <value>5</value>
                <label>Number of Products to Display</label>
                <type>text</type>
            </products_count>
            <template>
                <required>1</required>
                <visible>1</visible>
                <label>Template</label>
                <type>select</type>
                <value>catalog/product/widget/bestseller/content/bestseller_grid.phtml</value>
                <values>
                    <default translate="label">
                        <value>catalog/product/widget/bestseller/content/bestseller_grid.phtml</value>
                        <label>Bestseller Products Grid Template</label>
                    </default>
                    <list translate="label">
                        <value>catalog/product/widget/bestseller/content/bestseller_list.phtml</value>
                        <label>Bestseller Products List Template</label>
                    </list>
                </values>
            </template>
            <cache_lifetime translate="label description">
                <label>Cache Lifetime (Seconds)</label>
                <description>86400 by default, if not set. To refresh instantly, Clear the Blocks HTML Output Cache.</description>
                <visible>1</visible>
                <type>text</type>
            </cache_lifetime>
        </parameters>
    </bestseller_products>
</widgets>
