							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>							
							<depends>
								<enable>1</enable>
							</depends>
						</configuration_endbody>                  
                    </fields>
                </addonline_others_trackers>
            </groups>
        </google>
    </sections>
