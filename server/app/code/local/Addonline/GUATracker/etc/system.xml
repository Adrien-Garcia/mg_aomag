<config>
    <sections>
        <google translate="label" module="googlecheckout">
            <label>Google API</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>340</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <addonline_google_tag translate="label">
                    <label>Addonline Google Tag</label>
                    <frontend_type>text</frontend_type>                    
                    <sort_order>500</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable>
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <add_to>
                            <label>Script Position</label>
                            <frontend_type>select</frontend_type>
                            <source_model>addonline_guatracker/system_config_source_addto</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Here you can choose the script postion in you html code. "Head" will work always. "Before Body End" might not work on custom themes.</comment>
                        </add_to>
                        <account_id>
                            <label>Account Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Please enter your UA Id here. e.g. UA-4xxxxxxx-1</comment>
                        </account_id>
                        <anonymize_ip>
                            <label>Anonymize Ip</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </anonymize_ip>
                        <force_ssl>
                            <label>Force SSL</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Force SSL, set to 'Yes' if you want always to send data over https.</comment>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </force_ssl>
                    </fields>
                </addonline_google_tag>
                
                <addonline_google_checkout_tracking translate="label">
                    <label>Addonline Google Checkout Tracking</label>
                    <frontend_type>text</frontend_type>                    
