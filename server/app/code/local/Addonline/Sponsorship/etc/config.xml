<config>
    <modules>
        <Addonline_Sponsorship>
            <version>0.0.1</version>
        </Addonline_Sponsorship>
    </modules>
    <frontend>
    	<secure_url>
            <sponsorship_index>/sponsorship/index/</sponsorship_index>
            <sponsorship_boost>/sponsorship/boost/</sponsorship_boost>
           <!--  <sponsorship_points>/sponsorship/points/</sponsorship_points> --> 
            <sponsorship_openinviter>/sponsorship/openinviter/</sponsorship_openinviter>
        </secure_url>
        <routers>
            <sponsorship>
                <use>standard</use>
                <args>
                    <module>Addonline_Sponsorship</module>
                    <frontName>sponsorship</frontName>
                </args>
            </sponsorship>
        </routers>
        <layout>
            <updates>
                <sponsorship>
                    <file>sponsorship.xml</file>
                </sponsorship>
            </updates>
        </layout>
        <translate>
            <modules>
                <Addonline_Sponsorship>
                    <files>
                        <default>Addonline_Sponsorship.csv</default>
                    </files>
                </Addonline_Sponsorship>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
			<sponsorship>
				<use>admin</use>
				<args>
					<module>Addonline_Sponsorship</module>
					<frontName>sponsorship</frontName>
				</args>
			</sponsorship>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <sponsorship module="sponsorship">
                <title>Sponsorship</title>
                <sort_order>71</sort_order>
                <children>
                        <invitations module="sponsorship">
                                <title>Invitations list</title>
                                <sort_order>0</sort_order>
                                <action>sponsorship/adminhtml_sponsorship</action>
                        </invitations>
                        <parrainages module="sponsorship">
                                <title>Sponsorships list</title>
                                <sort_order>1</sort_order>
                                <action>sponsorship/adminhtml_link</action>
                        </parrainages>
                        <openinviter module="sponsorship">
                                <title>Open inviter providers</title>
                                <sort_order>3</sort_order>
                                <action>sponsorship/adminhtml_openinviter</action>
                        </openinviter>
                </children>
            </sponsorship>
        </menu>
		<acl>
            <resources>
                <all>
                        <title>Allow Everything</title>
                </all>
				<admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <sponsorship translate="title" module="sponsorship">
                                            <title>Module Sponsorship</title>
                                        </sponsorship>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <sponsorship module="sponsorship">
                            <title>Sponsorship</title>
                            <sort_order>80</sort_order>
                            <children>
                                <invitations module="sponsorship">
                                    <title>Invitations list</title>
                                </invitations>
                                <parrainages module="sponsorship">
                                    <title>Sponsorships list</title>
                                </parrainages>
                                <openinviter module="sponsorship">
                                	<title>Open inviter providers</title>
                        		</openinviter>
                            </children>
                        </sponsorship>
                    </children>
                </admin>
            </resources>
        </acl>
		<layout>
			<updates>
				<sponsorship>
					<file>sponsorship.xml</file>
				</sponsorship>
			</updates>
		</layout>
		<translate>
			<modules>
				<Addonline_Sponsorship>
					<files>
						<addonline_sponsorship>Addonline_Sponsorship.csv</addonline_sponsorship>
					</files>
				</Addonline_Sponsorship>
			</modules>
		</translate>
    </adminhtml>
    <global>
        <events>
        <!-- Création éventuelle du lien de parrainage lors de la commande -->
            <checkout_type_onepage_save_order_after>
                <observers>
                    <set_sponsorship>
                        <type>singleton</type>
                        <class>Addonline_Sponsorship_Model_Observer</class>
                        <method>setSponsor</method>
                    </set_sponsorship>
                </observers>
            </checkout_type_onepage_save_order_after>			
			<!-- Affiliation sur toutes les pages -->
			<controller_action_predispatch>
                <observers>
                    <affiliate>
                        <type>singleton</type>
                        <class>Addonline_Sponsorship_Model_Observer</class>
                        <method>affiliate</method>
                    </affiliate>
                </observers>
			</controller_action_predispatch>            
    	</events>
     	<rewrite>
    		<addonline_sponsorship_customer_account>
                <from><![CDATA[#^/customer/account/#]]></from><!-- si index à la place de account : ne pas mettre index -->
                <to>/sponsorship/customer_account/</to>
            </addonline_sponsorship_customer_account>
        </rewrite>
        <models>
            <catalogrule_mysql4>
                <rewrite>
                    <!-- CONFLIT avec SimpleCOnfiguableProduct à régler <rule>Addonline_Sponsorship_Model_Mysql4_Rule</rule> -->
                </rewrite>
            </catalogrule_mysql4>
            <sponsorship>
                <class>Addonline_Sponsorship_Model</class>
                <resourceModel>sponsorship_mysql4</resourceModel>
            </sponsorship>
            <sponsorship_mysql4>
                <class>Addonline_Sponsorship_Model_Mysql4</class>
                <entities>
                    <sponsorship>
                        <table>sponsorship</table>
                    </sponsorship>
                    <sponsorlog>
                        <table>sponsorship_sponsor_log</table>
                    </sponsorlog>
                    <change>
                        <table>sponsorship_change</table>
                    </change>
                    <link>
                        <table>sponsorship_change</table>
                    </link>
                    <sponsorshipopeninviter>
                        <table>sponsorship_openinviter</table>
                    </sponsorshipopeninviter>
                </entities>
            </sponsorship_mysql4>
            <!-- rewrite socialbookmarking url -->
             <socialbookmarking>
                 <rewrite>
                 	<urls>Addonline_Sponsorship_Model_SocialBookmarking_Urls</urls>
                 </rewrite>
             </socialbookmarking>
        </models>
        <resources>
            <sponsorship_setup>
                <setup>
                    <module>Addonline_Sponsorship</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sponsorship_setup>
            <sponsorship_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sponsorship_write>
            <sponsorship_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sponsorship_read>
        </resources>
        <blocks>
            <sponsorship>
                <class>Addonline_Sponsorship_Block</class>
            </sponsorship>
             <customer>
             	<rewrite>
             		<widget_name>Addonline_Sponsorship_Block_Customer_Widget_Name</widget_name>
             	</rewrite>
             </customer>
        </blocks>
        <helpers>
            <sponsorship>
                <class>Addonline_Sponsorship_Helper</class>
            </sponsorship>
        </helpers>
        <template>
            <email>
                <sponsorship_coupon_template translate="label" module="sponsorship">
                    <label>Sponsorship coupon</label>
                    <file>sponsorship_coupon.html</file>
                    <type>html</type>
                </sponsorship_coupon_template>
                <sponsorship_invitation_template translate="label" module="sponsorship">
                    <label>Sponsorship invitation</label>
                    <file>sponsorship_invitation.html</file>
                    <type>html</type>
                </sponsorship_invitation_template>
            </email>
        </template>
    </global>

    <default>
        <sponsorship>
            <sponsor>
                <sponsor_enabled>1</sponsor_enabled>
                <sponsor_optional_order>1</sponsor_optional_order>
                <sponsor_link_validity>365</sponsor_link_validity>
            </sponsor>
            <invitation>
                <template>sponsorship_invitation_template</template>
                <sponsor_invitation_validity>365</sponsor_invitation_validity>
                <time_before_boost>7</time_before_boost>
                <max_recipients>20</max_recipients>
            </invitation>
            <coupon>
                <template>sponsorship_coupon_template</template>
            </coupon>
            <open_inviter>
            	<open_inviter_enabled>0</open_inviter_enabled>
            	<username></username>
            	<private_key></private_key>
            </open_inviter>
        </sponsorship>
    </default>
    <crontab>
        <jobs>
            <sponsorship_boost>
                <schedule>
                    <cron_expr>0 */1 * * *</cron_expr>
                </schedule>
                <run>
                    <model>sponsorship/autoBoost::process</model>
                </run>
            </sponsorship_boost>
        </jobs>
    </crontab>
</config>