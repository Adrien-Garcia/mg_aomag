<config>
    <modules>
        <Jetpulp_Checkout>
            <version>0.0.0.1</version>
        </Jetpulp_Checkout>
    </modules>
    <frontend>
        <translate>
            <modules>
                <Jetpulp_Checkout>
                    <files>
                        <default>Jetpulp_Checkout.csv</default>
                    </files>
                </Jetpulp_Checkout>
                <Mage_Checkout>
                    <files>
                        <additional>Jetpulp_Checkout.csv</additional>
                    </files>
                </Mage_Checkout>
                <Mage_Customer>
                    <files>
                        <additional>Jetpulp_Checkout.csv</additional>
                    </files>
                </Mage_Customer>
                <Mage_Sales>
                    <files>
                        <additional>Jetpulp_Checkout.csv</additional>
                    </files>
                </Mage_Sales>
            </modules>
        </translate>
        <secure_url>
            <jetcheckout_onepage>/jetcheckout/onepage</jetcheckout_onepage>
        </secure_url>
        <routers>
            <jetcheckout>
                <use>standard</use>
                <args>
                    <module>Jetpulp_Checkout</module>
                    <frontName>jetcheckout</frontName>
                </args>
            </jetcheckout>
        </routers>
        <layout>
            <updates>
                <jetcheckout>
                    <file>jetpulp/checkout.xml</file>
                </jetcheckout>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <jetcheckout>
                <class>Jetpulp_Checkout_Block</class>
            </jetcheckout>
            <checkout>
                <rewrite>
                    <cart_totals>Jetpulp_Checkout_Block_Cart_Totals</cart_totals>
                </rewrite>
            </checkout>
        </blocks>
        <helpers>
            <jetcheckout>
                <class>Jetpulp_Checkout_Helper</class>
            </jetcheckout>
            <checkout>
                <rewrite>
                    <url>Jetpulp_Checkout_Helper_Checkout_Url</url>
                </rewrite>
            </checkout>
        </helpers>
    </global>
</config>
