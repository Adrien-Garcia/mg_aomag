			<zipfileset dir="skin/frontend/base" prefix="${zip-name}/skin/frontend/base">
			</zipfileset>
			<zipfileset dir="lib/cybermut" prefix="${zip-name}/lib/cybermut">
			</zipfileset>
			<zipfileset file="*.php" prefix="${zip-name}" />
			<zipfileset file="${conf}/deploy.sh" prefix="${zip-name}" />
		</zip>

	</target>
</project>
