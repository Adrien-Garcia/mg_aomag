			<zipfileset dir="app/design/frontend/base" prefix="${zip-name}/app/design/frontend/base">
			</zipfileset>
			<zipfileset dir="app/design/adminhtml" prefix="${zip-name}/app/design/adminhtml">
			</zipfileset>
			<zipfileset dir="app/etc/modules" prefix="${zip-name}/app/etc/modules">
			</zipfileset>
			<zipfileset dir="app/locale/fr_FR" prefix="${zip-name}/app/locale/fr_FR">
			</zipfileset>
			<zipfileset dir="skin/frontend/aomagento" prefix="${zip-name}/skin/frontend/addonline">
